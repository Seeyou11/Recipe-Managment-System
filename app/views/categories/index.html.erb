<h2 class="ui center aligned large header">List of Recipe Categories</h2>

<div class="ui container">
  <div class="ui container">
    <%= search_form_for @q, url: categories_path, html: { class: "ui form", role: "form" } do |f| %>
      <div class="fields">
        <div class="field right aligned" style="width: 25%;">
          <div class="ui search">
            <div class="ui icon input">
              <%= f.search_field :name_or_description_cont, placeholder: "Search", class: "prompt" %>
              <button type="submit" class="ui icon button star-button">
                <i class="search icon"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="ui segment mt-4">
    <div class="ui stackable three cards">
      <% @categories.each do |category| %>
        <div class="ui card">
          <div class="content">
            <div class="center aligned header"><%= link_to category.name, category_path(category) %></div>
            <div class="center aligned description">
              <p><%= category.description %></p>
            </div>
          </div>
          <div class="extra content">
            <div class="center aligned author">
              <%= pluralize(category.recipes.count, "recipes") %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
