
<h2 class="ui center aligned large header"> Welcome to the Recipe Management System </h2>
<h4 class="ui center aligned icon header">
  <i class="circular orange lock icon"></i>
  Change your password
</h4>

<div class="ui raised very padded text container segment">
  <%= form_for( @user, url: edit_password_path, html: { class: "ui form", role: "form" }) do |form| %>
    <div class="field">
      <%= form.label :current_password, "Current Password" %>
      <div class="ui left icon input">
        <%= form.password_field :current_password, placeholder: "Current Password" %>
        <i class="lock icon"></i>
      </div>
    </div>
    <div class="field">
      <%= form.label :password, "New Password" %>
      <div class="ui left icon input">
        <%= form.password_field :password, placeholder: "New Password" %>
        <i class="lock icon"></i>
      </div>
    </div>
    <div class="field">
      <%= form.label :password_confirmation, "Confirm New Password" %>
      <div class="ui left icon input">
        <%= form.password_field :password_confirmation, placeholder: "Confirm New Password" %>
        <i class="lock icon"></i>
      </div>
    </div>
    <%= form.submit "Update password", class: "ui orange submit button" %>
  <% end %>
</div>



