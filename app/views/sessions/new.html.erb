<h2 class="ui center aligned large header"> Welcome to the Recipe Management System </h2>
<h4 class="ui center aligned icon header">
  <i class="circular orange power off icon"></i>
  Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, url: login_path, html: {class: "ui form", role: "form"}) do |form| %>
        <div class="field">
         <%= form.label :email, "Email" %>
          <div class="ui left icon input">
            <%= form.text_field :email, placeholder: "email" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
         <%= form.label :password, "Password" %>
          <div class="ui left icon input">
            <%= form.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= form.submit "Log in", class: "ui orange submit button" %>
      </div>
    <% end %>
    <div class="middle aligned column">
      <div class="ui big button">
        <%= link_to " #{content_tag(:i, "", class: "signup icon")} Sign up".html_safe, signup_path, class: "orange" %>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>