<div class="ui raised very padded text container segment">
     <%= form_for(@user, html: {class: "ui form", role: "form"}) do |form| %>
        <div class="field">
         <%= render 'shared/errors', obj: @user %>
         <%= form.label :email, "Email" %>
          <div class="ui left icon input">
            <%= form.email_field :email, placeholder: "email" %>
            <i class="envelope icon"></i>
          </div>
        </div>
        <div class="field">
         <%= form.label :username, "Username" %>
          <div class="ui left icon input">
            <%= form.text_field :username, placeholder: "username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <% if !@user.id.present? %>
        <div class="field">
         <%= form.label :password, "Password" %>
          <div class="ui left icon input">
            <%= form.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <% end %>
        <div class="field">
          <%= form.label :file, "File" %>
          <div class="ui left icon input">
            <%= form.file_field :file, placeholder: "upload  your photo" %>
            <i class="file icon"></i>
          </div>
        </div>
        <%= form.submit @user.id.present? ? "Update account" : "Sign up", class: "ui orange submit button" %>
      </div>
    <% end %>
</div>

